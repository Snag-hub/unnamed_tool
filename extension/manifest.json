{
  "manifest_version": 2,
  "name": "DayOS Extension",
  "version": "1.0",
  "description": "Save current page to DayOS.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "http://localhost:3000/*"
  ],
  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_popup": "popup.html",
    "default_title": "Add to Read-Later"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}